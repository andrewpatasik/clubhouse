<%- contentFor('header') %>
<header class="flex flex-col bg-gray-50 text-indigo-500 w-full h-screen mb-20">
  <section id="hero-section" class="flex h-full">
    <article id="left" class="relative w-2/3 bg-gray-300">
      <div class="bg-contain bg-center h-full" style="background-image: url('images/peeps.svg')"></div>
      <div id="tagline" class="absolute inset-0 flex justify-center items-center">
        <div class="flex flex-col gap-2 bg-white text-center p-3 border border-8 border-indigo-500">
          <h1 class="text-6xl">Share Story,<br>Be Heard.</h1>
          <h6>Overheard is a platform to share your stories<br>and engage with like-minded people</h6>
        </div>
      </div>
    </article>
    <article id="right" class="w-full flex flex-col">
      <nav class="flex justify-between items-center p-8">
        <div id="logo" class="flex">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
          </svg>
          <h5 class="tracking-wide">Overheard</h5>
        </div>
        <ul class="tracking-wide">
          <%- include('./loginButton', {
        link: '/login',
        button: 'Log In'
      })%>
        </ul>
      </nav>

      <div id="form-container" class="flex-1 flex justify-center items-center text-gray-600">
        <form
          class="w-1/2 h-fit border rounded-md border-gray-100 bg-white flex flex-col items-center gap-2 py-4 tracking-wide"
          action="/signup" method="post">
          <div class="element-container w-9/12 flex flex-col font-bold">
            <label for="fullname" class="text-sm">Fullname:</label>
            <input
              class="rounded-sm border-b border-blue-200 outline-none p-1 focus:border-blue-500 transition ease-in-out"
              type="text" name="fullname" id="fullname" placeholder="Eren Jeager" required>
          </div>
          <div class="element-container w-9/12 flex flex-col font-bold">
            <label for="username" class="text-sm">Username:</label>
            <input
              class="border-b rounded-sm border-blue-200 outline-none p-1 focus:border-blue-500 transition ease-in-out"
              type="text" name="username" id="username" placeholder="@erenrumbling" required>
          </div>
          <div class="element-container w-9/12 flex flex-col font-bold">
            <label for="password" class="text-sm">Password:</label>
            <input
              class="border-b rounded-sm border-blue-200 outline-none p-1 focus:border-blue-500 transition ease-in-out"
              type="password" name="password" id="password" required>
          </div>
          <div class="element-container w-9/12 text-center my-10">
            <button
              class="bg-indigo-500 hover:bg-indigo-700 shadow-lg shadow-indigo-500/50 text-white font-bold py-3 px-5 rounded-full"
              type="submit"><span class="text-xl">Become Member</span></button>
          </div>
        </form>
      </div>

    </article>
  </section>
</header>

<%- contentFor('main') %>
<section id="platform" class="grid grid-cols-3 gap-4">
  <article class="grid grid-rows-4 justify-end items-end">
    <h6 class="tracking-wide">Your identity will be kept anonymous in public,<br>only your story what matters in
      Overheard.</h6>
  </article>
  <article>
    <h3 class="text-indigo-500 text-center">Take A Sneek-Peek To Overheard</h3>
    <div id="platform-content" class="h-[30rem] flex flex-col my-20 overflow-y-scroll">
      <% feed.forEach(data => { %>
      <%- include('./postcard', { data }) %>
      <% }) %>
    </div>
  </article>
  <article class="grid grid-rows-4 justify-start">
    <div></div>
    <div></div>
    <div></div>
    <h6 class="tracking-wide">Read other people story and find what really speaks to you.</h6>
  </article>
</section>