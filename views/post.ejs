<%- contentFor('header') %>
<header class="flex flex-col text-indigo-500 w-full h-auto">
  <nav class="flex justify-between items-center p-8">
    <div id="logo" class="flex">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
      </svg>
      <h5 class="tracking-wide">Overheard</h5>
    </div>
    <ul class="tracking-wide">
      <%- include('./loginButton', {
        link: '/logout',
        button: 'Log Out'
      })%>
    </ul>
  </nav>
</header>

<%- contentFor('main') %>
<section id="feed" class="grid grid-cols-4 gap-4">
  <article id="sidebar" class="grid grid-rows-4 pl-8">
    <!-- <nav>
      <ul class="flex flex-col gap-3">
        <li class="flex items-center gap-1">
        </li>
      </ul>
    </nav>
    <div class="row-span-3 self-end">
    </div> -->
  </article>

  <article class="col-span-2">
    <a href="/feed" class="flex items-center px-3 text-blue-500">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
      </svg>
      <span class="font-medium">Back to Feed</span>
    </a>
    <h1 class="px-3"><%= data.postTitle %></h1>
    <div id="post-detail" class="px-3 italic">
      <span>A story by</span>
      <span><%- data.user.name %></span>
    </div>
    <div id="contentBox"></div>
  </article>

  <article class="grid grid-rows-4 justify-start">

  </article>
</section>
<script>
  let contentBox = new Quill('#contentBox', {
    theme: 'bubble',
    readOnly: true
  })

  let content = <%- JSON.stringify(data.postContent) %>
    contentBox.setContents(JSON.parse(content));
</script>
